# ===================================
# Backend Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# Server
PORT=5000
NODE_ENV=production

# MongoDB Atlas
# Get your connection string from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/pereview?retryWrites=true&w=majority

# JWT Authentication
# Generate a strong random secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Google OAuth 2.0
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=

# Cloudinary (Image Upload CDN)
# Get credentials from: https://console.cloudinary.com/settings/api-keys
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Frontend URL (for CORS â€” your Vercel deployment URL)
CLIENT_URL=https://your-app-name.vercel.app
